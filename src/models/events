const mongoose = require('mongoose');

const eventSchema = mongoose.Schema({
  puplisherId: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'BaseUser',
  },
  title: {
    type: String,
    required: true,
  },
  content: {
    type: String,
    required: true,
  },
  coverImage: {
    type: String,
    required: true,
  },
  date: {
    type: date,
    required: true,
  },
  category: {
    type: String,
    enum: [
      'No Poverty',
      'Zero Hunger',
      'Good Health and Wellbeing',
      'Quality Education',
      'Gender Equality',
      'Clean Water and sanitation',
      'Affordable and Clean Energy',
      'Decent Work and Economic Growth',
      'Industry, Innovation, and Infrastructure',
      'Reduced Inequalities',
      'Sustainable Cities and Communities',
      'Responsible Consumption/ Production',
      'Life Below Water',
      'Life on Land',
      'Peace, Justice and Strong Institutions',
      'Climate Action',
    ],
    required: true,
  },
  confirmedVolunteers: [
    {
      type: mongoose.Schema.Types.ObjectId,
      ref: 'User',
    },
  ],
  invitedVolunteers: [
    {
      type: mongoose.Schema.Types.ObjectId,
      ref: 'User',
    },
  ],
  address: {
    city: {
      type: String,
      required: true,
    },
    country: {
      type: String,
      required: true,
    },
    addressLine: {
      type: String,
      required: true,
    },
  },
  location: {
    lat: {
      type: Number,
      required: true,
    },
    log: {
      type: Number,
      required: true,
    },
  },
});

module.exports = mongoose.model('Event', eventSchema);
